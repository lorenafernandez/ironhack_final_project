<div class="register sign_up">
    <p>REGÍSTRATE EN <strong> TUARTE </strong> </p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
     
      <%= f.hidden_field :role, :value => params[:form_role]%>

      <div class="my_field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="my_field">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
        <% end %> <br>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="my_field">
        <%= f.label "Confirmación de password" %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      
      <div class="btton_register">
        <%= f.submit "Enviar" %>
      </div>
    <% end %>

    <p> <small> ¿Ya tienes una cuenta? <%= link_to "Inicia Sesión", user_session_path %> </small> </p>

</div>


