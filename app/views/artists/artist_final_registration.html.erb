<div class="register sign_up last_register_artists">
    <p>REGÍSTRATE EN <strong> TUARTE </strong> </p>
    <p><small> Todos los campos marcados con * son obligatorios </small></p>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>


   <% id = params[:id] %>

	<%= form_tag ('/artists/welcome') do %>

		<%= hidden_field_tag :user_id, id %>

		<div class="my_field">
	        <%= label_tag "Eres *" %>
	        <%= select_tag :you_are, "<option value = Fotografía > Fotógrafo </option>
	        						  <option value = Pintura > Pintor </option>
	        						  <option value = Escultura > Escultor </option>
	        						  <option value = Arquitectura > Arquitecto </option>
	        						  <option value = Artes Visuales > Realizas videoarte </option>".html_safe %>
      	</div>


      	<div class="my_field">
	        <%= label_tag "Tipo de profesional *" %>
	        <%= select_tag :type_of_professional, "<option value = Consagrados > Profesional consagrado </option>
	        									   <option value = Noveles >Profesional novel</option>
	        									   <option value = Amateurs > <em> Amateur </em> </option>".html_safe %>
      	</div>


      	<div class="btton_register">
      	  	<%= submit_tag "Finalizar" %>
      	</div>

	<% end %>

</div>



