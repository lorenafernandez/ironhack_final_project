<html lang="es">

	<head>
		  <meta charset="UTF-8">
		  <meta name="viewport" content="width=device-width, initial-scale=1">

		  <title>tuarte</title>

		  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
